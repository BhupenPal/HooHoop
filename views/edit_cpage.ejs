<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Page</title>
    <link rel="stylesheet" href="/assets/css/index.css" />
    <link rel="stylesheet" href="/assets/css/all.min.css" />
    <link rel="stylesheet" href="/assets/css/fonts.css" />
    <script src="../assets/scripts/script.js"></script>
    <link
      rel="icon"
      href="/assets/images/favicon.ico"
      type="image/ico"
      sizes="16*16"
    />
</head>
<body>
    <%-include('./Components/Header.ejs') %>
        <div class="cardet_page">
          <form action="/edit-car/<%= car._id %>" method="POST">
      <div class="th_sxty_info">
        <div class="th60_container">
          <div class="viewthsxty">
            <button class="interior-changer">
              <i class="fad fa-steering-wheel"></i
              ><span class="tooltiptext">Interior</span>
            </button>
            <button class="exterior-changer">
              <i class="fad fa-car"></i
              ><span class="tooltiptext">Exterior</span>
            </button>


          </div>
          <div class="car_name_price">
            <div class="c_name">
              MAKE
              <input class="edit_inp" type="text" placeholder="Car Name" name="upMake" value="<%= car.Make %>">
            </div>
            <div class="c_model">
              Model
              <input class="edit_inp" type="text" placeholder="Car Model" name="upModel" value="<%= car.Model %>">
            </div>
            <div class="c_price">
              PRICE
              <input class="edit_inp" type="text" placeholder="Car Price" name="upPrice" value="<%= car.Price %>">
          </div>
            <div class="c_price">
              MIN PRICE
              <input class="edit_inp" type="text" placeholder="Min Car Price" name="upMinPrice" value="<%= car.minPrice %>">
            </div>
          </div>
        </div>
        <div class="cardetails_tab">
          <h1>Specifications</h1>
          <div class="det_connect">
            <div class="ico_hold">
              <i class="fad fa-joystick"></i>
              <p>Transmission</p>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upTransmission" value="<%= car.Transmission %>"></div>
          </div>

          <div class="det_connect">
            <div class="ico_hold">
              <i class="fal fa-tachometer"></i>
              <span>KM</span>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upkMeters" value="<%= car.kMeters %>"></div>
          </div>

          <div class="det_connect">
            <div class="ico_hold">
              <i class="fad fa-gas-pump"></i>
              <span>Fuel Type</span>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upFuelType" value="<%= car.fuelType %>"></div>
          </div>

          <div class="det_connect">
            <div class="ico_hold">
              <i class="fas fa-loveseat"></i>
              <span>Seats</span>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upSeatNum" value="<%= car.SeatNum %>"></div>
          </div>

          <div class="det_connect">
            <div class="ico_hold">
              <i class="fad fa-cogs"></i>
              <span>Engine</span>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upEngineSize" value="<%= car.engineSize %>"></div>
          </div>

          <div class="det_connect">
            <div class="ico_hold">
              <i class="fad fa-car-alt"></i>
              <span>Body style</span>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upBodyType" value="<%= car.BodyType %>"></div>
          </div>

          <div class="det_connect">
            <div class="ico_hold">
              <i class="fad fa-paint-brush-alt"></i>
              <span>Color</span>
            </div>
            <div class="prop_hold"><input class="edit_inp" type="text" placeholder="Enter Details Here" name="upColour" value="<%= car.Colour %>"></div>
          </div>
        </div>
      </form>
      </div>

    </div>
<%-include('./Components/Footer.ejs') %>
</body>
</html>
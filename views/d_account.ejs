  <body>
    <%-include('./Components/Header.ejs') %>
    <div class="dash_wrapper">
      <div class="dashfeature">
        <%-include('./Components/sidebar.ejs') %>
        <!-- Account Management -->
        <div class="fet_det">
          <div class="show_f">
            <%-include('./Flash/message.ejs') %>
          </div>
          <h1 class="feature_head">Account Management</h1>

          <div class="Usercred Acc_man">
            <form method="POST">
              <div class="credcontainer">
                <label for="d_cred_oldpass">Old Password</label>
                <input
                  type="password"
                  id="d_cred_oldpass"
                  name="originalPass"
                  required
                />
              </div>

              <div class="credcontainer">
                <label for="d_cred_newpass">New Password</label>
                <input
                  type="password"
                  id="d_cred_newpass"
                  name="password"
                  required
                />
              </div>

              <div class="credcontainer">
                <label for="d_cred_cnewpass">Confirm New Password</label>
                <input
                  type="password"
                  id="d_cred_cnewpass"
                  name="password2"
                  required
                />
              </div>

              <div class="subcred">
                <button
                  type="submit"
                  formaction="/user/dashboard/password-reset"
                >
                  Change Password
                </button>
              </div>
            </form>
          </div>
        </div>
        <!-- Account Management -->
      </div>
    </div>
    <%-include('./Components/Footer.ejs') %>
    <script src="/assets/scripts/flasher.js"></script>
  </body>

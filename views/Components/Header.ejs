<header class="Head">
  <div class="ajax-wrapper">
    <div class="logo">
      <a href="/">
        <img src="/assets/images/Logo.png" alt="" />
      </a>
    </div>
    <div class="search-engine">
      <form action="/buy-car" method="GET">
        <input
          type="text"
          placeholder="Search Car or Brands"
          class="search-box"
          name="search"
        />
        <div class="mag-search" role="button">
          <i class="fal fa-search"></i>
        </div>
      </form>
    </div>
    <div class="user-panel">
      <% if (user){ %>
      <h1>Hi, <%=user.firstName %></h1>
      <% } else { %>
      <a href="/login">
        <div class="login-btn">Login</div>
      </a>
      <a href="/sign-up">
        <div class="login-btn sign-up">sign up</div>
      </a>
      <% } %>
    </div>
  </div>
  <div class="menu-wrapper">
    <ul>
      <a href="/"><li>HOME</li></a>
      <a href="/sell-car"><li>SELL CAR</li></a>
      <a href="/buy-car"><li>BUY CAR</li></a>
    </ul>
  </div>
</header>

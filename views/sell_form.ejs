<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/index.css">
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/fonts.css">
    <link rel="icon" href="/assets/images/favicon.ico" type="image/ico" sizes="16*16">
    <title>HooHoop</title>
</head>
<body>  
    <%-include('./Components/Header.ejs') %>
    <!-- navbar end -->
    <div class="sellform_wrap">
    <div class="VIN-input">
        <form method="POST">
            <h1 class="sell_head">Tell Us About the Vehicle you are selling</h1>
            <div class="ip_box">
                <input type="text" class="v_enter" placeholder="Enter your number plate or VIN" name="vinFigure">
                <button formaction="/car-submit/data">FIND</button>
                <h6 class="form_see">Or Enter details Manually</h6>
            </div>
        </form>

        <% if (vinFigured) { %>
            <div class="car_info" id="car_jam">
                <h1>Check your car details</h1>
                <div class="car_api_data">
                    <div class="colspan_1">
                       <span class="a_dta">Make: <%= detailedCarObject.make %> </span> <br>
                       <span class="a_dta">Model: <%= detailedCarObject.model %> </span> <br>
                       <span class="a_dta">Fuel Type: <%= detailedCarObject.fuel_type %> </span> <br>
                       <span class="a_dta">Plate No: <%= detailedCarObject.plate %> </span> <br>
                    </div>
                    <div class="colspan_1">
                        <span class="a_dta">Year: <%= detailedCarObject.year_of_manufacture %> </span> <br>
                        <span class="a_dta">No Of Owners: <%= detailedCarObject.number_of_owners %> </span> <br>
                        <span class="a_dta">VIN: <%= detailedCarObject.vin %> </span> <br>
                        <span class="a_dta">Chassis: <%= detailedCarObject.chassis %> </span> <br>
                    </div>
                    <div class="colspan_1">
                        <span class="a_dta">Body style: <%= detailedCarObject.body_style %> </span> <br>
                        <span class="a_dta">Color: <%= detailedCarObject.main_colour %> </span> <br>
                        <span class="a_dta">Engine No: <%= detailedCarObject.engine_no %> </span> <br>
                        <span class="a_dta">Seats: <%= detailedCarObject.no_of_seats %> </span> <br>
                    </div>
            </div>
        </div>
        <% } %>
    </div>

    <div class="sell_form_submission">
            <div class="form_inp">
                
                <form id="uploadForm">
                    <div class="form_head">
                        <h1>selling price</h1>
                        <input type="text" placeholder="Preferred Selling Price" name="Price" required>
                        <input type="text" placeholder="Minimum Selling Price" name="minPrice" required>
                    </div>
                    
                    <div class="input-wrapper">
                        <span> Select Make </span>
                        <select name="Make" id="smake" class="select-tag" onchange="ModelAccumlator()">
                            <option value="ALFA ROMEO">ALFA ROMEO</option>
                            <option value="ASTON MARTIN">ASTON MARTIN</option>
                            <option value="AUDI">AUDI</option>
                            <option value="AUSTIN">AUSTIN</option>
                            <option value="BMW">BMW</option>
                            <option value="CADILLAC">CADILLAC</option>
                            <option value="CHEVROLET">CHEVROLET</option>
                            <option value="CHRYSLER">CHRYSLER</option>
                            <option value="DAEWOO">DAEWOO</option>
                            <option value="DODGE">DODGE</option>
                            <option value="FERRARI">FERRARI</option>
                            <option value="FIAT">FIAT</option>
                            <option value="FORD">FORD</option>
                            <option value="FOTON">FOTON</option>
                            <option value="GMC">GMC</option>
                            <option value="HAVAL">HAVAL</option>
                            <option value="HOLDEN">HOLDEN</option>
                            <option value="HONDA">HONDA</option>
                            <option value="HUMMER">HUMMER</option>
                            <option value="HYUNDAI">HYUNDAI</option>
                            <option value="INFINITI">INFINITI</option>
                            <option value="ISUZU">ISUZU</option>
                            <option value="IVECO">IVECO</option>
                            <option value="JAGUAR">JAGUAR</option>
                            <option value="JEEP">JEEP</option>
                            <option value="KIA">KIA</option>
                            <option value="LAND ROVER">LAND ROVER</option>
                            <option value="LEMBO">LEMBO</option>
                            <option value="LEXUS">LEXUS</option>
                            <option value="LOTUS">LOTUS</option>
                            <option value="MAHINDRA">MAHINDRA</option>
                            <option value="MASERATI">MASERATI</option>
                            <option value="MCLAREN">MCLAREN</option>
                            <option value="MERCEDES BENZ">MERCEDES BENZ</option>
                            <option value="MG">MG</option>
                            <option value="MINI">MINI</option>
                            <option value="MITSUBISHI">MITSUBISHI</option>
                            <option value="NISSAN">NISSAN</option>
                            <option value="OPEL">OPEL</option>
                            <option value="PEUGEOT">PEUGEOT</option>
                            <option value="PORSCHE">PORSCHE</option>
                            <option value="RAM">RAM</option>
                            <option value="RENAULT">RENAULT</option>
                            <option value="RENAULT">RENAULT</option>
                            <option value="ROLLS ROYCE">ROLLS ROYCE</option>
                            <option value="ROVER">ROVER</option>
                            <option value="SAAB">SAAB</option>
                            <option value="SKODA">SKODA</option>
                            <option value="SMART">SMART</option>
                            <option value="SSANGYONG">SSANGYONG</option>
                            <option value="SUBARU">SUBARU</option>
                            <option value="SUZUKI">SUZUKI</option>
                            <option value="TESLA">TESLA</option>
                            <option value="TOYOTA">TOYOTA</option>
                            <option value="TRIUMPH">TRIUMPH</option>
                            <option value="TVR">TVR</option>
                            <option value="VOLKSWAGEN">VOLKSWAGEN</option>
                            <option value="VOLVO">VOLVO</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Select Model </span>
                        <select name="Model" id="smodel" class="select-tag">
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Select Model Year </span>
                        <select name="ModelYear" id="smodelyear" class="select-tag">
                            <option value="">Model Year</option>
                            <option value="">Model Year</option>
                            <option value="">Model Year</option>
                            <option value="">Model Year</option>
                            <option value="">Model Year</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span>Body Type</span>
                        <select name="BodyType" id="sbodytype" class="select-tag">
                            <option value="">Body Type</option>
                            <option value="">Body Type</option>
                            <option value="">Body Type</option>
                            <option value="">Body Type</option>
                            <option value="">Body Type</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Doors (optional) </span>
                        <select name="Doors" id="sdoors" class="select-tag">
                            <option value="">Doors</option>
                            <option value="">Doors</option>
                            <option value="">Doors</option>
                            <option value="">Doors</option>
                            <option value="">Doors</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Seats (optional) </span>
                        <input type="text" class="inp_form_tag" value="<%= detailedCarObject.no_of_seats %>" name="SeatNum">
                    </div>

                    <div class="input-wrapper">
                        <span> Model Detail (optional) </span>
                        <input type="text" class="inp_form_tag" name="ModelDetail">
                    </div>

                    <div class="input-wrapper">
                        <span> Import History (optional) </span>
                        <select name="ImportHistory" id="sihistory" class="select-tag">
                            <option value="">Import History</option>
                            <option value="">Import History</option>
                            <option value="">Import History</option>
                            <option value="">Import History</option>
                            <option value="">Import History</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Previous Owners (optional) </span>
                        <select name="PreviousOweners" id="spoweners" class="select-tag">
                            <option value="">Previous Oweners</option>
                            <option value="">Previous Oweners</option>
                            <option value="">Previous Oweners</option>
                            <option value="">Previous Oweners</option>
                            <option value="">Previous Oweners</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Number plate or VIN (optional) </span>
                        <input type="text" class="inp_form_tag" value="<%= detailedCarObject.plate %>" name="vinNum" required>
                    </div>

                    <div class="input-wrapper">
                        <span> Kilometres </span>
                        <input type="text" class="inp_form_tag" value="<%= detailedCarObject.latest_odometer_reading %>" name="kMeters" required>
                    </div>

                    <div class="input-wrapper">
                        <span> Colour (Optional) </span>
                        <input type="text" class="inp_form_tag" value="<%= detailedCarObject.main_colour %>" name="Colour">
                    </div>

                    <div class="input-wrapper">
                        <span> Engine Size (CC) (Optional) </span>
                        <input type="text" class="inp_form_tag" value="<%= detailedCarObject.cc_rating %>" name="engineSize">
                    </div>

                    <div class="input-wrapper">
                        <span> Transmission (Optional) </span>
                        <select name="Transmission" id="stransmission" class="select-tag">
                            <option value="">Transmission</option>
                            <option value="">Transmission</option>
                            <option value="">Transmission</option>
                            <option value="">Transmission</option>
                            <option value="">Transmission</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Fuel Type </span>
                        <select name="FuelType" id="sfueltype" class="select-tag">
                            <option value="">Fuel Type</option>
                            <option value="">Fuel Type</option>
                            <option value="">Fuel Type</option>
                            <option value="">Fuel Type</option>
                            <option value="">Fuel Type</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Cylinders </span>
                        <select name="Cylinders" id="scylinders" class="select-tag">
                            <option value="">Cylinders</option>
                            <option value="">Cylinders</option>
                            <option value="">Cylinders</option>
                            <option value="">Cylinders</option>
                            <option value="">Cylinders</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> WOF Expiry (Optional) </span>
                        <select name="WOFExpirey" id="swofexp" class="select-tag">
                            <option value="">WOF Expirey</option>
                            <option value="">WOF Expirey</option>
                            <option value="">WOF Expirey</option>
                            <option value="">WOF Expirey</option>
                            <option value="">WOF Expirey</option>
                        </select>
                    </div>

                    <div class="input-wrapper">
                        <span> Reg. Expiry (Optional) </span>
                        <select name="RegExpirey" id="sexpirey" class="select-tag">
                            <option value="">Reg. Expirey</option>
                            <option value="">Reg. Expirey</option>
                            <option value="">Reg. Expirey</option>
                            <option value="">Reg. Expirey</option>
                            <option value="">Reg. Expirey</option>
                        </select>
                    </div>

                    <div class="form_inp form2">
                    
                        <div class="drive-type">
                            <h3>drive type: 4WD</h3>
                            <input type="checkbox" name="DriveWheel4">
                        </div>
                    
                        <div class="orcincluded">
                            <h2>Are on road costs included?</h2>
                            <div><input type="radio" name="RoadCost" value="1">Yes - the car will be sold with a current WoF, licensing (rego) and road user charges</div>
                            <div><input type="radio" name="RoadCost" value="0">No - the buyer may need to pay additional costs to legally drive the car on NZ roads</div>
                        </div>
                    
                        <div class="describecar">
                            <h2>Describe the car (optional)</h2>
                            <textarea name="tarea" id="t_area" rows="6" placeholder="E.g. condition and other information" name="Description"></textarea>
                        </div>
                        <div class="file_upload">
                            <h2>Upload Interior</h2>
                                <div class="int_images">
                                    <span class="containspan">
                                        <label for="Front">Front</label>
                                        <input class="input_preview" type="file" onclick="previewname(this)" name="interiorFront" id="Front" accept="image/*"/>
                                        <span id="interiorFront"></span>
                                    </span>

                                    <span class="containspan">
                                        <label for="Middle">Middle</label>
                                        <input class="input_preview" type="file" onclick="previewname(this)" name="interiorMiddle" id="Middle" accept="image/*" required />
                                        <span id="interiorMiddle"></span>
                                    </span>

                                    <span class="containspan">
                                        <label for="Rear">Rear</label>
                                        <input class="input_preview" type="file" onclick="previewname(this)" name="interiorRear" id="Rear" accept="image/*"/>
                                        <span id="interiorRear"></span>
                                    </span>

                                </div>
                                
                                <h2>Upload Exterior</h2>
                                <div class="ext_images">
                                    <span class="containspan">
                                        <label for="ExteriorInp">Exterior</label>
                                        <input type="file" name="exterior" onclick="previewname(this)" class="input_preview" id="ExteriorInp" accept="video/*" required/>  
                                        <span id="exterior"></span>
                                    </span>
                                </div>
                        </div>

                        <div class="rq360">
                            <input type="checkbox" name="photo360">
                            <h2>Request for 360 photography</h2>
                        </div>

                        <div class="dealer_details">
                            <div>Car Dealer Details</div>
                            <input class="inp_form_tag" type="text" placeholder="Name" name="DealerName">
                            <input class="inp_form_tag" type="text" placeholder="Email" name="DealerEmail">
                            <input class="inp_form_tag" type="text" placeholder="Phone" name="DealerNum">
                        </div>
                    
                        <div class="contact_details">
                            <div>Would you like to show your personal details</div>  
                            <div><input type="checkbox" name="authorEmail"><span>Email</span></div>
                            <div><input type="checkbox" name="authorPhone"><span>Phone Number</span></div>           
                        </div>
                    </div>
                    
                    <div class="progress-bar" id="ProgressBar">
                        <div id="progress-bar-fill" onchange="redirect()">
                            <span id="progress-bar-text">0%</span>
                        </div>
                    </div>

                    <div  class="sub-btn">
                        <button type="submit" id="uploadFormSubmit">Submit</button>
                    </div>
            </form>
        </div>
        </div>
    </div>

    <%-include('./Components/Footer.ejs') %>
    <script src="/assets/scripts/script.js"></script>
    <script src="/assets/scripts/ajax/sellFormAjax.js"></script>
    <script>
        function ModelAccumlator(){
            let MakeValue = document.getElementById('smake').value;
            let ModelBox = document.getElementById('smodel');

            let MakeModel = [
                {
                    Make: "ALFA ROMEO", 
                    Models: ['ALFA CAR1', 'ALFA CAR2']
                },
                {
                    Make: "KIA",
                    Models: ['KIA CAR1', 'KIA CAR2']
                }
            ]

            for (var i = 0; i < length; i++) {
                ModelBox.removeChild(ModelBox.children[i]);
            }
            
            console.log(ModelBox)

                for (var i=0; i < MakeModel.length; i++) {
                    if (MakeModel[i].Make === MakeValue) {
                        for(var j=0; j<MakeModel[i].Models.length; j++){
                            ModelBox.options.add(new Option(MakeModel[i].Models[j], MakeModel[i].Models[j]))
                        }
                    }
                }
            
        }
    </script>
</body>
</html>
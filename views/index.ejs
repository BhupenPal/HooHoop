<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/assets/css/index.css" />
    <link rel="stylesheet" href="/assets/css/all.min.css" />
    <link rel="stylesheet" href="/assets/css/fonts.css" />
    <script src="/assets/scripts/script.js"></script>
    <title>HooHoop</title>
    <link
      rel="icon"
      href="/assets/images/favicon.ico"
      type="image/ico"
      sizes="16*16"
    />
  </head>

  <body>
    <%-include('./Components/Header.ejs') %>
    <!--Navbar-end-->

    <!--Slider-->
    <div class="slider">
      <div class="buy_car_wrapdiv">
        <div class="buy-car">
          <div class="card_headline">Need a Car ?</div>
          <form method="POST" class="data_fetch">
            <div class="card_input_info">
              <div class="vehicle_state input_div">
                <select name="State" id="v-state">
                  <option value="">New</option>
                  <option value="1">Used</option>
                </select>
              </div>
              <div class="vehicle_budget input_div">
                <select name="Budget" id="v-budget">
                  <option value="">Select Budget</option>
                </select>
              </div>
              <div class="vehicle_info_wrap input_div">
                <select name="Type" id="v-type">
                  <option value="">Select Vehicle Type</option>
                </select>
              </div>
            </div>
            <div class="submit_input_info">
              <button class="submit_data">submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!--Slider-end-->

    <!--Home-content-->

    <div class="infowrap80">
      <div class="cardbd_1">
        <div class="cd_head">
          <div class="cd_headline">Popular Cars</div>
        </div>
        <div class="cd_content">
        <% for( let i = 0; i < popCarData.length; i++ ) { %>
          <a href="http://localhost:8080/buy-car/<%= popCarData[i]._id %>" class="cd_car_data">
            
              <div class="img_contain">
                <div class="view-details">View details</div>
                <img src="/assets/Uploads/<%= popCarData[i].vinNum %>/exterior/<%= popCarData[i].thumbnail %>" />
              </div>
              <div class="info_contain">
                <div class="con_name"> <%= popCarData[i].Make %> </div>
                <div class="con_price"><%= popCarData[i].Price %></div>
                <div></div>
              </div>
            
          </a>
        <% } %>
      </div>
        <div class="cd_btn">
          <button onclick="scrolldiv(0,0)">
            <i class="fal fa-chevron-left"></i>
          </button>
          <button onclick="scrolldiv(1,0)">
            <i class="fal fa-chevron-right"></i>
          </button>
        </div>
        <div class="cd_link">
          <a href="/buy-car">View All</a>
        </div>
      </div>
  
      <div class="cardbd_1">
        <div class="cd_head">
          <div class="cd_headline">Hatchbacks</div>
        </div>
        <div class="cd_content">
        <% for( let i = 0; i < hatchCarData.length; i++ ) { %>
          <a href="http://localhost:8080/buy-car/<%= hatchCarData[i]._id %>" class="cd_car_data">
          
              <div class="img_contain">
                <div class="view-details">View details</div>
                <img src="/assets/Uploads/<%= hatchCarData[i].vinNum %>/exterior/<%= hatchCarData[i].thumbnail %>" />
              </div>
              <div class="info_contain">
                <div class="con_name"> <%= hatchCarData[i].Make %> </div>
                <div class="con_price"><%= hatchCarData[i].Price %></div>
                <div></div>
              </div>
  
          </a>
        <% } %>
      </div>
        <div class="cd_btn">
          <button onclick="scrolldiv(2,1)">
            <i class="fal fa-chevron-left"></i>
          </button>
          <button onclick="scrolldiv(3,1)">
            <i class="fal fa-chevron-right"></i>
          </button>
        </div>
        <div class="cd_link">
          <a href="/buy-car">View All Hatchbacks</a>
        </div>
      </div>
  
      <div class="cardbd_1">
        <div class="cd_head">
          <div class="cd_headline">Sedans</div>
        </div>
        <div class="cd_content">
        <% for( let i = 0; i < sedanCarData.length; i++ ) { %>
          <a href="http://localhost:8080/buy-car/<%= sedanCarData[i]._id %>" class="cd_car_data">
            
              <div class="img_contain">
                <div class="view-details">View details</div>
                <img src="/assets/Uploads/<%= sedanCarData[i].vinNum %>/exterior/<%= sedanCarData[i].thumbnail %>" />
              </div>
              <div class="info_contain">
                <div class="con_name"> <%= sedanCarData[i].Make %> </div>
                <div class="con_price"><%= sedanCarData[i].Price %></div>
                <div></div>
            
            </div>
          </a>
        <% } %>
      </div>
        <div class="cd_btn">
          <button onclick="scrolldiv(4,2)">
            <i class="fal fa-chevron-left"></i>
          </button>
          <button onclick="scrolldiv(5,2)">
            <i class="fal fa-chevron-right"></i>
          </button>
        </div>
        <div class="cd_link">
          <a href="/buy-car">View All Sedans</a>
        </div>
      </div>
  
    </div>

    <!-- Home-content-end -->
    <%-include('./Components/Footer.ejs') %>
  </body>
</html>
